{
    "compilerOptions": {
        "target": "es2015",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true
    },
    "include": [
        "decs.d.ts",
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "/*.tsx",
        "src/pages/api/image-upload.js",
        "src/utils/trpc.js",
        "src/pages/_document.js",
        "src/theme/createEmotionCache.js"
    ],
    "exclude": ["node_modules"]
}
